<div class="content show-comparison-gene">
  <div class="row">
    <div class="span6">
      <div class="row banner">
        <div class="span6"><h2>Comparison:</h2></div>
      </div>
      <div class="row">
        <div class="span2"><h4>state:</h4></div>
        <div class="span4"><h3><%= @comparison.state %></h3></div>
      </div>
      <div class="row">
        <div class="span2"><h4>species:</h4></div>
        <div class="span4"><h3><%= @comparison.species %></h3></div>
      </div>
    </div>
    <div class="span6">
      <div class="row banner">
        <div class="span6"><h2>Experiment:</h2></div>
      </div>
      <div class="row">
        <div class="span2"><h4>label:</h4></div>
        <div class="span4"><h3><%= @experiment.label %></h3></div>
      </div>
      <div class="row">
        <div class="span2"><h4>genes identified:</h4></div>
        <div class="span4">
          <h3><%= @experiment.identified %> <small>total</small></h3>
          <h3><%= @experiment.identified(:up) %> <small>up regulated</small></h3>
          <h3><%= @experiment.identified(:down) %> <small>down regulated</small></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <div class="row banner">
        <div class="span6"><h2>Gene:</h2></div>
      </div>
      <div class="row">
        <div class="span2"><h4>name</h4></div>
        <div class="span4"><h3><%= @gene.name %></h3></div>
      </div>
      <div class="row">
        <div class="span2"><h4>location</h4></div>
        <div class="span4">
          <h3><%= @gene.chromosome %> <small>chromosome</small></h3>
          <h3><%= @gene.beg_site %> <small>begin site</small></h3>
          <h3><%= @gene.end_site %> <small>end site</small></h3>
        </div>
      </div>
      <div class="row">
        <div class="span2"><h4>factors discovered</h4></div>
        <div class="span4"><h3><%= @gene.num_factors %></h3></div>
      </div>
    </div>
    <div class="span6">
      <div class="row banner">
        <div class="span6"><h2>Regulatory Element:</h2></div>
      </div>
      <div class="row">
        <div class="span2"><h4>sequence</h4></div>
        <div class="span4"><h3><%= @re_element.sequence %></h3></div>
      </div>
      <div class="row">
        <div class="span2"><h4>location</h4></div>
        <div class="span4">
          <h3><%= @re_element.beg %> <small>beginning</small></h3>
          <h3><%= @re_element.len %> <small>length</small></h3>
          <h3><%= @re_element.sns %> <small>sense</small></h3>
        </div>
      </div>
      <div class="row">
        <div class="span2"><h4>stats</h4></div>
        <div class="span4">
          <h3><%= @re_element.la %> <small>la</small></h3>
          <h3><%= @re_element.la_slash %> <small>la/</small></h3>
          <h3><%= @re_element.lq %> <small>lq</small></h3>
          <h3><%= @re_element.ld %> <small>ld</small></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="row banner">
    <div class="span12">
      <h2>Transcription Factors:</h2>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th width="2%"></th>
            <th><%= sortable_col :name %></th>
          </tr>
        </thead>
        <tbody>
          <% @re_element.transcription_factors.each do |f| %>
            <tr>
              <td width="2%"><a class="edit" href="<%= edit_transcription_factor_path f %>" class="edit"><i class="icon-edit"></i></a></td>
              <td><%= link_to f.name, f %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row banner">
    <div class="span12">
      <h2>Similar Regulatory Elements:</h2>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>sequence</th>
            <th>beg</th>
            <th>len</th>
            <th>sns</th>
            <th>la</th>
            <th>la/</th>
            <th>ld</th>
            <th>lq</th>
          </tr>
        </thead>
        <tbody>
          <% @re_element.similar.each do |r| %>
            <tr>
              <td><%= link_to r.sequence, r %></td>
              <td><%= r.beg %></td>
              <td><%= r.len %></td>
              <td><%= r.sns %></td>
              <td><%= r.la %></td>
              <td><%= r.la_slash %></td>
              <td><%= r.ld %></td>
              <td><%= r.lq %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
