<h1>Transcription Factors</h1>

<div class="row">
  <div class="span12">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>name</th>
          <th>FAC</th>
          <th># of models</th>
          <th># of genes</th>
          <th>total occurences</th>
        </tr>
      </thead>
      <tbody>
        <% @factors.each do |factor| %>
          <tr>
            <td><%= link_to(factor.id, factor) %></td>
            <td><%= factor.name %></td>
            <td></td>
            <td></td>
            <td><%= count_genes factor %></td>
            <td><%= count_total factor %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
